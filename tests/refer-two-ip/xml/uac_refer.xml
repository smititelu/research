<scenario name="Basic Sipstone UAC">
    <!-- In client mode (sipp placing calls), the Call-ID MUST be       -->
    <!-- generated by sipp. To do so, use [call_id] keyword.            -->
    <send retrans="500">
        <![CDATA[

          REFER sip:[service]@[remote_ip]:[remote_port] SIP/2.0
          Via: SIP/2.0/[transport] [local_ip]:[local_port];branch=[branch]
          From: sipp <sip:sipp@[local_ip]:[local_port]>;tag=[call_number]
          To: sipp-server <sip:[service]@[remote_ip]:[remote_port]>;tag=[call_number]
          Call-ID: [call_id]
          CSeq: 1 REFER
          Contact: sip:sipp@[local_ip]:[local_port]
          Max-Forwards: 70
          Subject: Performance Test
          Refer-to: sip:sipp@192.168.0.103:[local_port]
          Referred-By: sipp@[local_ip]
          Content-Length: 0

        ]]>
    </send>

    </send>

    <recv response="202" rtd="true" crlf="true">
    </recv>

